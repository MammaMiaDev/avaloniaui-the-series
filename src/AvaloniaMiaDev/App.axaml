<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApplication.App"
             xmlns:local="using:AvaloniaApplication"
             xmlns:sty="using:FluentAvalonia.Styling"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferUserAccentColor="True" />
        <StyleInclude Source="avares://AvaloniaMiaDev/Assets/Icons.axaml" />
        <StyleInclude Source="avares://AvaloniaMiaDev/Templates/ContentExample.axaml" />
    </Application.Styles>
</Application>
