<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaMiaDev.App"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:avaloniaMiaDev="clr-namespace:AvaloniaMiaDev"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <avaloniaMiaDev:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferUserAccentColor="True" />
        <StyleInclude Source="avares://AvaloniaMiaDev/Assets/Icons.axaml" />
        <StyleInclude Source="avares://AvaloniaMiaDev/Templates/ContentExample.axaml" />
    </Application.Styles>
</Application>
