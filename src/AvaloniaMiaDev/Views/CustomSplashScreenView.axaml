<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AvaloniaMiaDev.ViewModels"
        xmlns:viewModels1="clr-namespace:AvaloniaMiaDev.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
        x:Class="AvaloniaMiaDev.Views.CustomSplashScreenView"
        Title="CustomSplashScreenView"
        Icon="/Assets/logo_big_no_bg.ico"
        Width="300"
        Height="300"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        Topmost="True"
        x:DataType="viewModels1:CustomSplashScreenViewModel">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid RowDefinitions="*,Auto" ColumnDefinitions="*,Auto">
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   FontSize="18"
                   Background="AliceBlue"
                   Foreground="Black"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center">
                Launching Application...
            </Label>
            <Label Grid.Row="1"
                   Grid.Column="0"
                   DockPanel.Dock="Bottom"
                   Content="{Binding StartupMessage}"
                   FontSize="12"
                   Background="LightYellow"
                   Foreground="Black"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" />
            <Button Grid.Row="1" Grid.Column="1" DockPanel.Dock="Bottom" Command="{Binding Cancel}">
                Cancel
            </Button>
        </Grid>
    </Border>
</Window>
